<div class="content">
  <% form_for :destination_content, :url => translate_destination_path(@destination), :method => "post" do |form| %>

    <h4><%= t("Please select the language you will translate to ") %><%= select_tag :translation_language, options_for_select(@possible_translations) %></h4>
    
    <h4>Translate this introduction</h4>
    <p id="translated">
      <%= @introduction unless @introduction.nil? %>
    </p>
    <h4>into</h4>
    <%=form.text_area :introduction, :value => @destination.destination_content.introduction, :size => "100x6" %>

    <h4>Translate this overview</h4>
    <p id="translated">
      <%= @overview unless @overview.nil? %>
    </p>
    <h4>into</h4>
    <%=form.text_area :overview, :value => @destination.destination_content.overview, :size => "100x6" %>
    
    <h4>Translate this Things to do</h4>
    <p id="translated">
      <%= @attractions unless @attractions.nil? %>
    </p>
    <h4>into</h4>
    <%=form.text_area :attractions, :value => @destination.destination_content.attractions, :size => "100x6" %>
    
    <p>
      <%=submit_tag t("Save translation")%>
    </p>
    

  <% end %>
</div>