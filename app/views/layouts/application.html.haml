!!!
%html{"xmlns"=>"http://www.w3.org/1999/xhtml", "xml:lang"=>"en"}
  %head
    %title= title ||= "Touristr"
    = stylesheet_link_tag 'application', 'thickbox', 'datePicker', :cache=>:all
  %body
    #wrapper
      = render :partial => "shared/header"
      
      = render :partial => "shared/trip_control"
      
      = render :partial => "shared/destination_nav"
      
      = render :partial => "shared/trip" unless @controller.controller_name == 'destinations'
      
      = yield :top

      = display_standard_flashes

      = yield
      = render :partial => "shared/footer"
    
    = javascript_include_tag :defaults, :cache=>:all
    = yield :javascripts
