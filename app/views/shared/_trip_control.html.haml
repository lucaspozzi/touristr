
- return '' unless @t

%ul#tripControl
  %li#tripName
    = link_to h(@t.name), trip_path(@t)
  %li#tripPeople
    = thickbox_link_to "#{t(:adult, :count=>@t.number_of_adults)} #{t(:children, :count=>@t.number_of_children)}", edit_trip_path(@t), :height => 250
  %li#tripItinerary
    = link_to t("Itinerary"), "#"
  %li#tripComments
    = link_to t("Comments"), "#"
  %li#tripBudget
    = link_to t("Budget"), "#"
  %li#tripTodos
    = thickbox_link_to t("To-Dos"), todos_path, :height => 150