#logo
  %h1
    = link_to "Touristr", "/"
  %p#tagline
    making travel easier

%ul#userControls
  - if @u && !@u.new_record?
    %li
      = link_to t("Profile"), person_path(@p)
    %li
      = link_to t("Logout"), logout_path
  - else
    %li
      = link_to t("Login"), login_path
    %li
      = link_to t("Sign Up"), signup_path
      
  =link_to 'English', "?locale=en"
  =link_to ' | Francais', "?locale=fr"      
      
= render :partial => 'shared/search' unless  @controller.controller_name == 'home' || @controller.controller_name == 'accounts' || @showing_children == true

.clearBoth