

= less_remote_form_for :trip, :url=>trip_path(@t), :method=>"put" do |form|
  = form.text_field :name
  = form.text_field :starts_on
  = form.text_field :ends_on
  = form.text_field :number_of_adults
  = form.text_field :number_of_children
  = form.check_box :public, :onclick=>"if ($(this).checked()){puts('y');$('#public_url_div).show();} else {puts('n');$('#public_url_div').hide();}"
  #public_url_div
    Public Url:
    = link_to h(trip_url(@t)), trip_url(@t)
  %div
    Private Url:
    = link_to @t.private_url, @t.private_url
  
  = submit_tag t("Save")