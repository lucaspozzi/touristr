.content
  %h2
    = @attraction.name
  %p#destinationIntroduction.static_content
    - if !@attraction.destination_content.nil? && !@attraction.destination_content.picture.nil?
      %img{:src => @attraction.destination_content.picture, :alt => @attraction.destination_content.picture_caption, :title =>  @attraction.destination_content.picture_caption}
      %p
        = "#{@attraction.destination_content.picture_caption} #{t("by") unless @attraction.destination_content.picture_author.blank?}" 
        %a{:href => @attraction.destination_content.picture_url, :target => "_blank"}
          =@attraction.destination_content.picture_author
  %h3
    = t("Description")
  %p  
    - form_tag (destination_attraction_path(params[:destination_id], @attraction), :multipart => true, :method => :put) do
      - if @attraction.destination_content.picture.nil? || @attraction.destination_content.picture.blank?
        %p 
          %label
            =t("Upload the main picture")
          = file_field_tag 'attraction[picture]'
      %p
        %label
          =t("Caption")
        = text_field_tag 'attraction[picture_caption]', @attraction.destination_content.picture_caption, :size => "27"
        %p
          %label
            =t("Author")
          = text_field_tag 'attraction[picture_author]', @attraction.destination_content.picture_author, :size => "27"
        %p
          %label
            =t("Link to original picture")
          = text_field_tag 'attraction[picture_url]', @attraction.destination_content.picture_url, :size => "27"

      = text_area_tag 'attraction[introduction]', @attraction.destination_content.introduction, :size => "80x10"
      = submit_tag "save"
  .media
    .photos
      %h3= t("Photo Gallery")
      %ul.destinationPhotoGallery
        = render :partial => "/destinations/panoramio_pic", :collection => @attract_pics